<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.cc.fito.mapd711_assign3_onlinepurchaseapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="ca.cc.fito.mapd711_assign3_onlinepurchaseapp.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.cc.fito.mapd711_assign3_onlinepurchaseapp.CustomerActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="ca.cc.fito.mapd711_assign3_onlinepurchaseapp.AppPreferenceActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>